{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-xl mx-auto mt-10 px-4">
        <h1 class="text-2xl font-semibold text-gray-800 dark:text-white mb-4">Rechercher un post</h1>

        <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6">
            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

            <div>
                {{ form_label(form.post, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                {{ form_widget(form.post, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                {{ form_errors(form.post) }}
            </div>

            <div class="text-right">
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
                    Rechercher
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
