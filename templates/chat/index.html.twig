{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <a class="btn py-1 px-4 text-2xl" href="{{ path('app_myposts') }}">
        <i class="bi bi-caret-left-fill"></i>
    </a>
    <div class="min-h-screen   p-6">
        <h1 class="text-2xl font-bold mb-6"><i class="bi bi-chat-dots-fill text-green-400"></i> Chat Room</h1>

        <div class="bg-gray-800 rounded-xl shadow-lg p-4 space-y-4 max-w-4xl mx-auto overflow-y-auto max-h-[70vh] border border-gray-700">
            {% for message in chat.messages %}
                <div class="bg-gray-700 p-3 rounded-lg shadow-sm">
                    <p class="text-sm text-gray-400 mb-1">
                        <i class="bi bi-clock"></i> {{ message.createdAt|date('H:i') }}
                        &mdash; <i class="bi bi-person-circle text-blue-400"></i>
                        <span class="font-medium text-white">{{ message.author.ofUser.email }}</span>
                    </p>
                    <p class="text-white">{{ message.content }}</p>
                </div>
            {% else %}
                <p class="text-gray-400 italic">No messages yet. Start the conversation!</p>
            {% endfor %}
        </div>

        <div class="mt-6 max-w-4xl mx-auto">
            {{ form_start(form, {'attr': {'class': 'flex flex-col sm:flex-row gap-4'}}) }}
            {{ form_widget(form.content, {'attr': {'class': 'flex-grow px-4 py-2 rounded text-black border'}}) }}
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold px-6 py-2 rounded shadow flex items-center gap-2">
                <i class="bi bi-send-fill"></i> Send
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
